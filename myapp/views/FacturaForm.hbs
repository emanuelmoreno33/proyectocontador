<div class="container">
    <br />
    {{idpoliza}}
    <form action="/facturaForm/factura/operar" method="POST">
        <input type="hidden" name="_id" value="{{idpoliza}}"/>
        <div class="form-group">
            <label for="idfactura">Id de la factura:</label>
            <input type="number" class="form-control" id="idfactura" name="idfactura" value="{{poliza.idfactura}}">
        </div>
        <div class="form-group">
            <label for="apellidos">Fecha de la factura:</label>
            <input type="date" class="form-control" id="fecha" name="fecha" value="{{poliza.fecha}}">
        </div>
        <div class="form-group">
            <label for="descrip">Concepto:</label>
            <input type="text" class="form-control" id="concepto" name="concepto" value="{{poliza.concepto}}">
        </div>
        <button type="submit" class="btn btn-primary">Aceptar</button>
        <a href="/factura/{{idpoliza}}" class="btn btn-danger">Cancelar</a>
    </form>
</div>